#!/usr/bin/env node

var _ = require('lodash')
var vega = require('vega')
var momentTZ = require('moment-timezone')
var numeral = require('numeral')

let data = ''
process.stdin.setEncoding('utf8')

process.stdin.on('readable', () => {
  let chunk
  while ((chunk = process.stdin.read()) !== null) {
    data += chunk
  }
})

vega.expressionFunction('momentFormat', (date, fmt) =>
  momentTZ(date).format(fmt),
)
vega.expressionFunction('numeralFormat', (number, fmt) =>
  numeral(number).format(fmt),
)

process.stdin.on('end', () => {
  data = JSON.parse(_.trim(data))
  var view = new vega.View(vega.parse(data), { renderer: 'none' }).finalize()
  view.toSVG().then(function (svg) {
    process.stdout.write(svg)
  })
})
